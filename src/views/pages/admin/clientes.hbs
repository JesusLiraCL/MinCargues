<h2>Lista de Clientes</h2>

{{> dynamicTable headers=tableHeaders showAddButton=true addButtonUrl=addButtonUrl}}

<script>
    window.clientsData = {{{clientsData}}};
</script>

<!-- Modal para agregar cliente -->
<div id="modalWindow" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 class="modal-title">Agregar Nuevo Cliente</h2>
        <form id="modalForm">
            <div class="form-group">
                <label for="documento">Documento:</label>
                <input type="text" id="documento" name="documento" required>
            </div>
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="direccion">Direcci√≥n:</label>
                <input type="text" id="direccion" name="direccion">
            </div>
            <div class="form-group">
                <label for="contacto">Contacto:</label>
                <input type="text" id="contacto" name="contacto">
            </div>
            <div class="form-group">
                <label for="correo">Correo:</label>
                <input type="email" id="correo" name="correo">
            </div>

            <div class="modal-actions">
                <button type="submit" id="submit-button" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar
                </button>
                
                <button id="edit-save-button" class="btn btn-edit" style="display: none;">
                    <i class="fas fa-edit"></i> Editar
                </button>
                
                <button id="delete-button" class="btn btn-danger" style="display: none;">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                
                <button type="button" class="btn btn-cancel btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </button>   
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="/css/components/tables.css">
<link rel="stylesheet" href="/css/components/modal.css">
<script src="/js/dynamicTable.js"></script>
<script src="/js/clientes.js"></script>