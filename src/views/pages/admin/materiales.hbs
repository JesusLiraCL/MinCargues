<h2>Lista de Materiales</h2>

{{> dynamicTable headers=tableHeaders showAddButton=true addButtonUrl=addButtonUrl}}

<script>
    window.materialsData = {{{materialsData}}};
</script>

<div id="modalWindow" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 class="modal-title">Agregar Nuevo Material</h2>
        <form id="modalForm">
            <div class="form-group">
                <div class="label-tooltip">
                    <label for="nombre">Nombre:</label>
                </div>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="unidad_medida">Unidad de Medida:</label>
                <input type="text" id="unidad_medida" name="unidad_medida" required>
            </div>
            <div class="modal-actions">
                <button type="submit" id="submit-button" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar
                </button>
                
                <button id="edit-save-button" class="btn btn-edit" style="display: none;">
                    <i class="fas fa-edit"></i> Editar
                </button>
                
                <button id="delete-button" class="btn btn-danger" style="display: none;">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                
                <button type="button" class="btn btn-cancel btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </button>   
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="/css/components/tables.css">
<link rel="stylesheet" href="/css/components/modal.css">
<script src="/js/dynamicTable.js"></script>
<script src="/js/materiales.js"></script>