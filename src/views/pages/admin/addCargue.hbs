<div class="cargue-details-container" data-user-id={{user.id}}>
    <div class="cargue-details-header">
        <h2>Agregar Cargue</h2>
        <div class="header-buttons">
            <button class="btn btn-save" id="btn-agregar">
                <i class="fas fas fa-save"></i> Agregar
            </button>
            <button id="btn-cancelar" class="btn btn-danger">
                <i class="fas fa-times"></i> Cancelar
            </button>
        </div>
    </div>

    <div class="cargue-content">
        <div class="cargue-grid">
            <!-- Información Básica (Arriba Izquierda) -->
            <div class="cargue-section">
                <h3>Información Básica</h3>
                <div class="info-row">
                    <label>Inicio Programado:</label>
                    <input type="datetime-local" class="editable-input" id="fecha_inicio_programada">
                </div>
                <div class="info-row">
                    <label>Fin Programado:</label>
                    <input type="datetime-local" class="editable-input" id="fecha_fin_programada">
                </div>
                <div class="info-row">
                    <label>Material:</label>
                    <div class="material-container">
                        <input type="text" class="editable-input small-input" id="material_nombre">
                    </div>
                </div>
                <div class="info-row">
                    <label>Cantidad:</label>
                    <div class="material-container">
                        <input type="number" class="editable-input small-input" id="cantidad">
                        <span class="small-input"></span>
                    </div>
                </div>
                <div class="info-row">
                    <label>Observaciones:</label>
                    <input type="text" class="editable-input" id="observaciones">
                </div>
            </div>

            <div class="cargue-section">
                <h3>Cliente</h3>
                <div class="info-row">
                    <label>Documento:</label>
                    <input type="text" class="editable-input" id="documento">
                </div>
                <div class="info-row">
                    <label>Nombre:</label>
                    <span id="cliente_nombre"></span>
                </div>
                <div class="info-row">
                    <label>Dirección:</label>
                    <span id="cliente_direccion"></span>
                </div>
                <div class="info-row">
                    <label>Contacto:</label>
                    <span id="cliente_contacto"></span>
                </div>
                <div class="info-row">
                    <label>Correo:</label>
                    <span id="cliente_correo"></span>
                </div>
            </div>

            <div class="cargue-section">
                <h3>Conductor Asignado</h3>
                <div class="info-row">
                    <label>Cédula:</label>
                    <span id="conductor_cedula"></span>
                </div>
                <div class="info-row">
                    <label>Nombre:</label>
                    <span id="conductor_nombre"></span>
                </div>
                <div class="info-row">
                    <label>Edad:</label>
                    <span id="conductor_edad"></span>
                </div>
                <div class="info-row">
                    <label>Teléfono:</label>
                    <span id="conductor_telefono"></span>
                </div>
                <div class="info-row">
                    <label>Correo:</label>
                    <span id="conductor_correo"></span>
                </div>
            </div>

            <div class="cargue-section">
                <h3>Camión</h3>
                <div class="info-row">
                    <label>Placa:</label>
                    <input type="text" class="editable-input" id="placa">
                </div>
                <div class="info-row">
                    <label>Capacidad:</label>
                    <span id="camion_capacidad"></span>
                </div>
                <div class="info-row">
                    <label>Tipo de Camión:</label>
                    <span id="camion_tipo"></span>
                </div>
                <div class="info-row">
                    <label>Habilitado:</label>
                    <span id="camion_habilitado"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/css/components/cargueDetails.css">

<script src="/js/addCargue.js" defer></script>
<script src="/js/entityFetch.js" defer></script>