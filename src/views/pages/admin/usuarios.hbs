<h2>Lista de Usuarios</h2>

{{> dynamicTable headers=tableHeaders showAddButton=true addButtonUrl=addButtonUrl}}

<script>
    window.usersData = {{{usersData}}};
</script>

<!-- Modal para agregar usuario -->
<div id="modalWindow" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 class="modal-title">Agregar Nuevo Usuario</h2>
        <form id="modalForm">
            <div class="form-group">
                <label for="nombre_usuario">Nombre de Usuario:</label>
                <input type="text" id="nombre_usuario" name="nombre_usuario" required>
            </div>
            <div class="form-group" id="password-group" style="display: none;">
                <label for="contrasena">Contraseña:</label>
                <input type="password" id="contrasena" name="contrasena" minlength="6">
            </div>
            <div class="form-group">
                <label for="rol">Rol</label>
                <select id="rol" name="rol" required>
                    <option value="">Seleccione un Rol</option>
                    <option value="Administrador">Administrador</option>
                    <option value="Conductor">Conductor</option>
                </select>
            </div>
            <div class="form-group">
                <label for="cedula">Cédula:</label>
                <input type="text" id="cedula" name="cedula" required>
            </div>
            <div class="form-group">
                <label for="nombre">Nombre Completo:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="telefono">Teléfono:</label>
                <input type="tel" id="telefono" name="telefono">
            </div>
            <div class="form-group">
                <label for="edad">Edad:</label>
                <input type="number" id="edad" name="edad" min="0" max="120">
            </div>
            <div class="form-group">
                <label for="correo">Correo:</label>
                <input type="email" id="correo" name="correo">
            </div>

            <div class="modal-actions">
                <button type="submit" id="submit-button" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar
                </button>
                
                <button id="edit-save-button" class="btn btn-edit" style="display: none;">
                    <i class="fas fa-edit"></i> Editar
                </button>
                
                <button id="delete-button" class="btn btn-danger" style="display: none;">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                
                <button type="button" class="btn btn-cancel btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </button>   
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="/css/components/tables.css">
<link rel="stylesheet" href="/css/components/modal.css">
<script src="/js/dynamicTable.js"></script>
<script src="/js/usuarios.js"></script>